# MongoDB 连接串（替换成你的 Atlas URI）
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/my-website?retryWrites=true&w=majority

# 管理员账号（登录 /admin/login 时使用）
ADMIN_USER=your_admin_username
ADMIN_PASS=your_admin_password

# JWT 签名密钥
JWT_SECRET=your_jwt_secret

# 邮件服务（QQ 邮箱示例）
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your@qq.com
SMTP_PASS=your_smtp_authorization_code

# 收信地址（留言通知会发到这里，可留多个，用逗号分隔）
MAIL_TO=you@example.com

# 前端环境变量：API 根地址
# 打包到 GitHub Pages 后，你需要把它指向 Railway 上的域名
VITE_API_BASE=https://<your-railway-app>.up.railway.app/api
